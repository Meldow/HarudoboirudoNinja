				glVertex3f(_eyeWidth / 2.0f + 1.0f, _headLength / 2.0f + 0.02f, _eyeHeight / 2.0f + 0.2f);
				glVertex3f(-_eyeWidth / 2.0f + 1.0f, _headLength / 2.0f + 0.02f, _eyeHeight / 2.0f + 0.2f);
