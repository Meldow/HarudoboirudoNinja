	void ImageLoaderHeightMap::setup() {
		printf("-------- Height Map --------\n");
		printf("LOADING HEIGHTMAP...\n");
		scaleValue = 1.0f;							
		_rotate = 0.0f;
		glShadeModel(GL_SMOOTH);
		glClearColor(0.0f, 0.0f, 0.0f, 0.5f);
		glClearDepth(1.0f);
		glEnable(GL_DEPTH_TEST);
		glDepthFunc(GL_LEQUAL);
		glHint(GL_PERSPECTIVE_CORRECTION_HINT, GL_NICEST);
 
		LoadRawFile(_mapFile, MAP_SIZE * MAP_SIZE, g_HeightMap); 
		printf("HEIGHTMAP LOADED.\n");
		dynamic_cast<DebugManager*>(cg::Registry::instance()->get("DebugManager"))->registerMap(dynamic_cast<Debug*>(this));
	}

